<div class="container">
    <div class="row">
        <div class="col-md-11 col-sm-10 col-xs-12">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        {{#link-to 'index' class="navbar-brand" }}ETF-SA{{/link-to}}
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            {{#if session.isAuthenticated}}
                                {{#if (not-eq currentUser.role "ROLE_TEACHER")}}
                                  {{#nav-link-to 'users'}}<span class="glyphicon glyphicon-user"></span> Korisnici{{/nav-link-to}}
                                {{/if}}
                                  {{#nav-link-to 'classrooms'}}<span class="glyphicon glyphicon-calendar"></span> Sale{{/nav-link-to}}
                                {{#if (eq currentUser.role "ROLE_ADMIN")}}
                                  {{#nav-link-to 'equipment-types'}}<span class="glyphicon glyphicon-list"></span> Oprema{{/nav-link-to}}         
                                {{/if}}
                                {{#if (eq currentUser.role "ROLE_OPERATOR")}}
                                  {{#nav-link-to 'takenKeys'}}<span class="glyphicon glyphicon-lock"></span> Kljuƒçevi{{/nav-link-to}}
                                {{/if}}

                            {{/if}}
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {{#if session.isAuthenticated}}
                                {{#nav-link-to 'logout'}}<span class="glyphicon glyphicon-log-in"></span> Odjava{{/nav-link-to}}
                            {{else}}
                                {{#nav-link-to 'login'}}<span class="glyphicon glyphicon-log-out"></span> Prijava{{/nav-link-to}}
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-md-1 col-sm-2 col-xs-12" id="currentTime">
            {{clock.hour}}:{{clock.minute}}:{{if (lt clock.second 10) '0'}}{{clock.second}}
        </div>
    </div>
</div>
